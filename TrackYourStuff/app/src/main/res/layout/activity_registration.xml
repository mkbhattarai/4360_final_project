<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maheshbhattarai.sqlite_database_demo.RegistrationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="Registration Form"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:hint="Enter Name"
        android:inputType="text"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="Enter Address"
        android:inputType="text"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="Enter Phone Number"
        android:inputType="number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:hint="Enter Password"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioEmployeer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:fontFamily="serif"
                android:text="Employeer" />

            <RadioButton
                android:id="@+id/radioJobSeeker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="serif"
                android:text="JobSeeker" />

        </RadioGroup>




        <!--<CheckBox
            android:visibility="gone"
            android:id="@+id/employeer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:text="Employeer"
            android:textSize="18sp" />

        <CheckBox
            android:visibility="gone"
            android:id="@+id/job_seeker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/checkBox1"
            android:text="Job Seeker"
            android:textSize="18sp" />-->

    </LinearLayout>

<Spinner
    android:layout_width="match_parent"
    android:id="@+id/sppiner_cat"
    android:visibility="invisible"
    android:layout_height="60dp"></Spinner>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:onClick="onSubmit"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="If already account? Login here"
        android:textSize="18sp" />

</LinearLayout>
